# Local Paths Configuration
# Copy this file to 'local_paths.yaml' and customize with your actual paths
# This file is gitignored so each developer can have their own setup

# Path to your documentation repository
docs_path: "/path/to/your/deepgram-docs"

# Paths to SDK repositories for testing
sdk_paths:
  python: "/path/to/your/deepgram-python-sdk"
  javascript: "/path/to/your/deepgram-js-sdk"
  go: "/path/to/your/deepgram-go-sdk"
  csharp: "/path/to/your/deepgram-dotnet-sdk"

